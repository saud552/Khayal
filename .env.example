# ملف إعدادات البيئة - Environment Variables
# انسخ هذا الملف إلى .env واملأ القيم الصحيحة

# معرف API تليجرام (مطلوب)
TG_API_ID=your_api_id_here

# هاش API تليجرام (مطلوب)  
TG_API_HASH=your_api_hash_here

# رمز البوت من BotFather (مطلوب)
BOT_TOKEN=your_bot_token_here

# وضع النظام المحسن (اختياري)
# القيم المتاحة: default, production, testing
ENHANCED_MODE=default

# إعدادات البروكسي (اختياري)
USE_PROXY=false
PROXY_TIMEOUT=15

# إعدادات الأمان (اختياري)
MAX_REPORTS_PER_SESSION=50
MAX_REPORTS_PER_HOUR=1000

# إعدادات التطوير (اختياري)
DEBUG_MODE=false
LOG_LEVEL=INFO